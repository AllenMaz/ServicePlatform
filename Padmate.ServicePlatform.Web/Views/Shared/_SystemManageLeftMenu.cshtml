@using Padmate.ServicePlatform.Service;
@using Padmate.ServicePlatform.Models;
@{
    B_Mail bMail = new B_Mail();
    int unSendMailNum = bMail.GetAllUnSendMail().Count();
    string href = "/Manage/";
}

<link href="~/Content/CustomerMenu.css" rel="stylesheet">
<script src="~/Scripts/CustomerMenu.js"></script>
<style>
    .systemtip{
        color:red;
        font-size:medium;
        font-weight:bold;
        padding:3px;
    }
</style>
<div class="menu-sidebar" id="accordion">
    <div class="menu-sidebar-nav">
        <ul>
            <li>
                <a class="menu-first" href="@Path.Combine(href, "HomeBackground")">
                    <i class="fa fa-image"></i>
                    首页图片
                </a>
            </li>
            <li>
                <a data-toggle="collapse" data-parent="#accordion" class="menu-first" href="#servicemanage">
                    <i class="fa fa-cogs"></i>
                    服务管理
                    <span class="fa fa-chevron-left"></span>
                </a>
                <ul id="servicemanage" class="panel-collapse collapse menu-second">
                    <li>
                        <a href="@Path.Combine(href, "ServiceMarket")">
                            <i class="fa fa-cubes"></i>
                            市场平台
                        </a>
                    </li>
                    <li>
                        <a href="@Path.Combine(href, "ServiceProduct")">
                            <i class="fa fa-cubes"></i>
                            产品平台
                        </a>
                    </li>
                    <li>
                        <a href="@Path.Combine(href, "ServiceEngineer")">
                            <i class="fa fa-cubes"></i>
                            工程平台
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a data-toggle="collapse" data-parent="#accordion" class="menu-first" href="#activitymanage">
                    <i class="fa fa-cogs"></i>
                    活动管理
                    <span class="fa fa-chevron-left"></span>
                </a>
                <ul id="activitymanage" class="panel-collapse collapse menu-second">
                    <li>
                        <a href="@Path.Combine(href, "ActivityForecast")">
                            <i class="fa fa-cubes"></i>
                            活动预告
                        </a>
                    </li>
                    <li>
                        <a href="@Path.Combine(href, "WonderfulActivity")">
                            <i class="fa fa-cubes"></i>
                            精彩活动
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a class="menu-first" href="@Path.Combine(href, "Information")">
                    <i class="fa fa-info"></i>
                    资讯管理
                </a>
            </li>
            <li>
                <a class="menu-first" href="@Path.Combine(href, "UserManage")">
                    <i class="fa fa-user"></i>
                    用户管理
                </a>
            </li>
            <li>
                <a data-toggle="collapse" data-parent="#accordion" class="menu-first" href="#contactmanage">
                    <i class="fa fa-cogs"></i>
                    联系人管理
                    <span class="fa fa-chevron-left"></span>
                </a>
                <ul id="contactmanage" class="panel-collapse collapse menu-second">
                    <li>
                        <a href="@Path.Combine(href, "ContactScope")">
                            <i class="fa fa-angle-double-up"></i>
                            职责范围
                        </a>
                    </li>
                    <li>
                        <a href="@Path.Combine(href, "ContactInfo")">
                            <i class="fa fa-user-md"></i>
                            联系人信息
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a class="menu-first" href="@Path.Combine(href, "Mail")">
                    <i class="fa fa-envelope"></i>
                    系统邮件
                    @if (unSendMailNum > 0)
                    {
                        <sup class="systemtip">@unSendMailNum</sup>
                    }
                </a>
            </li>
        </ul>
        
    </div>


</div>

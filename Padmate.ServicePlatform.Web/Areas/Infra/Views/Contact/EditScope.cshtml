@using Padmate.ServicePlatform.Models;
@{
    Layout = null;
    M_ContactScope contactScope = (M_ContactScope)ViewData["ContactScope"];
}
<!--#region修改-->
<div class="close-modal" data-dismiss="modal">
    <i class="fa fa-3x fa-close"></i>
</div>
<div class="container">

    <h3 class="customer-h3 text-center">修 改</h3>
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2 control-label">
                <label class="customer-content-sm">职责范围：</label>
            </div>
            <div class="col-md-10">
                <input class="inputS" id="tbScope" placeholder="联系人职责范围" value="@contactScope.Scope" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-2 control-label">
                <label class="customer-content-sm">显示顺序：</label>
            </div>
            <div class="col-md-10">
                <input class="inputS" id="tbSequence" placeholder="显示顺序" value="@contactScope.Sequence" />
            </div>
        </div>

    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-lg btn-info"
            data-dismiss="modal">
        退 出
    </button>
    <button type="button" class="btn btn-lg btn-danger" onclick="SaveEdit()">
        保 存
    </button>
</div>
<!--#endregion 修改-->

<script>
    //修改或新增保存
    function SaveEdit() {

        $("body").showLoading();
        var saveObj = ConstructSaveObj();
        var jsonParam = JSON.stringify(saveObj);
        $.ajax({
            type: "POST",
            url: "/Infra/Contact/SaveEditScope",
            dataType: "json",
            data: jsonParam,
            async: false,   //同步
            success: function (message) {

                if (message.Success) {
                    $("body").hideLoading();

                    CloseEditScreen();
                    RefreshTable();

                } else {
                    $("body").hideLoading();

                    layer.alert(message.Content, {
                        skin: 'layui-layer-molv' //样式类名
                      , closeBtn: 0
                    });
                    return;
                }
            }
        });
    }


    //构造保存对象
    function ConstructSaveObj() {
        var obj = {
            Id:'@contactScope.Id',
            Scope: $("#tbScope").val(),
            Sequence: $("#tbSequence").val()

        };
        return obj;
    }
</script>